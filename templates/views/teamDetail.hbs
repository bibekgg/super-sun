{{!-- banner --}}
<div class="page-title-section" style="background-image:url(/images/parallax-2.jpg)">
    <div class="container">
        <div class="center-holder page-title">
            <h1>Team Member</h1>
            <ul>
                <li><a href='/'>Home</a></li>
            </ul>
        </div>
    </div>
</div>
{{!-- about --}}
<div class="section-block">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-4">
                {{#if data.member.image.url}}
                <img alt="member" class="border-round full-width img-shadow"
                    src="{{{cloudinaryUrl data.member.image width=360 height=440 gravity='auto' crop='fill'}}}">
                {{else}}
                <img alt="team-img" class="border-round full-width img-shadow"
                    src="https://via.placeholder.com/360x440?text={{data.member.name}}">
                {{/if}}
            </div>
            <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-7">
                <div class="section-heading left-holder mt-20">
                    <h2>{{data.member.name}}</h2>
                    <h4>{{data.member.position}}</h4>
                    <div class="team-member-social-links">
                        {{#if data.member.socialLinks.facebook}}
                        <a href="{{{socialLinks.facebook}}}" target="_blank"><i class="fa fa-facebook-official"></i></a>
                        {{/if}}
                        {{#if data.member.socialLinks.linkedin}}
                        <a href="{{{socialLinks.linkedin}}}" target="_blank"><i class="fa fa-linkedin"></i></a>
                        {{/if}}
                        {{#if data.member.socialLinks.twitter}}
                        <a href="{{{socialLinks.twitter}}}" target="_blank"><i class="fa fa-twitter"></i></a>
                        {{/if}}
                        {{#if data.member.socialLinks.instagram}}
                        <a href="{{{socialLinks.instagram}}}" target="_blank"><i class="fa fa-instagram"></i></a>
                        {{/if}}
                    </div>
                    <div class="text-content">
                        <p>{{{data.member.description}}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>