{{!-- banner --}}
<div class="page-title-section" style="background-image:url(images/parallax-5.jpg)">
    <div class="container">
        <div class="center-holder page-title">
            <h1>Products</h1>
            <ul>
                <li><a href='/'>Home</a>
                <li><a href='/products'>Products</a>
            </ul>
        </div>
    </div>
</div>
{{!-- products list --}}
<div class="section-block">
    <div class="container">
        <div class="row">
            <div class="isotope-grid">
                {{# each data.products}}
                <div class="col-xs-12 col-sm-6 col-md-4 isotope-item business">
                    <a href="{{productUrl slug}}">
                        <div class="project-item">
                            <div class="overlay-container">
                                <img alt="project-img" src="{{{cloudinaryUrl image width=360 height=240 crop='fill'}}}">
                                <div class="project-item-overlay">
                                    <h4>{{name}}</h4>
                                    <p>{{content.brief}}</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>